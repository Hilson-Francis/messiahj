  			<li {{#is page "Videos"}} class="active"{{/is}}><a href="/videos">Videos</a></li>
  			<li {{#is page "Photos"}} class="active"{{/is}}><a href="/photos">Photos</a></li>
  			<li {{#is page "Contact"}} class="active"{{/is}}><a href="/contact">Contact Us</a></li>
